<div class="row">
    <hr>
    <div class="container mt-4">    
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.reference,{ 'attr': {'class': "form-control"}})}}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.created_at) }}
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-4">
                    {{ form_row(form.carrierName,{ 'attr': {'class': "form-control"}})}}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.carrierPrice,{ 'attr': {'class': "form-control"}})}}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.trackNumber,{ 'attr': {'class': "form-control"}})}}
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-2">{{ form_row(form.isPaid,{ 'attr': {'class': "form-control"}})}}</div>
                <div class="col-md-3">{{ form_row(form.stripeSessionId,{ 'attr': {'class': "form-control"}})}}</div>
                <div class="col-md-2">{{ form_row(form.isPromocode,{ 'attr': {'class': "form-control"}})}}</div>
                <div class="col-md-3">{{ form_row(form.promocodename,{ 'attr': {'class': "form-control"}})}}</div>
                <div class="col-md-2">{{ form_row(form.state,{ 'attr': {'class': "form-control"}})}}</div>
            </div>
            <div class="row mt-4">
                <div class="col-md-3">
                    {{ form_row(form.total,{ 'attr': {'class': "form-control"}})}}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.delivery,{ 'attr': {'class': "form-control"}})}}
                </div>
            </div>            
            
            <button class="btn btn-primary">{{ button_label|default('Mettre Ã  jour') }}</button>
        {{ form_end(form) }}
    </div>
</div>
