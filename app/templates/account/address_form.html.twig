{% extends 'base.html.twig' %}


{% block body %}
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="breadcrumb_iner">
                <div class="breadcrumb_iner_item">
                    <h2>Ajouter une adresse</h2>
                    <p>Accueil <span>-</span>Mon compte</p>
                </div>
                </div>
            </div>
            </div>
        </div>
    </section>

    <div class="row">
        <div class="container">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-4">{{form_row(form.firstname,{ 'attr': {'class': "form-row form-row-wide"}})}}</div>
                    <div class="col-md-4">{{form_row(form.lastname,{ 'attr': {'class': "form-row form-row-wide"}})}}</div>
                    <div class="col-md-4">{{form_row(form.phone,{ 'attr': {'class': "form-row form-row-wide"}})}}</div>
                </div>

                <div class="row">
                    <div class="col-md-12">{{form_row(form.address,{ 'attr': {'class': "form-control"}})}}</div>
                </div>

                <div class="row">
                    <div class="col-md-12">{{form_row(form.addressInformation,{ 'attr': {'class': "form-control"}})}}</div>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBpUbuATU-1E8JOU4cl_O04d8UGrMN6qxE&libraries=places"></script>
    <script type="text/javascript">

        function initialize() {
        var input1 = document.getElementById('address_address');
        new google.maps.places.Autocomplete(input1);
        }
        google.maps.event.addDomListener(window, 'load', initialize);

	</script>
{% endblock %}

